  name = Evan Pavlica
  email = evan@pavlica.us
	signingkey = F461D89F2EFA35F2

[credential]
  # helper = cache
  helper = store --file ~/.git-credential-store

[color]
  ui = true

[push]
  default = upstream

[merge]
  # ff = false

[rebase]
  autosquash = true

[diff]
  renames = true
  confictstyle = patience
  tool = vimdiff

[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  ignorecase = false

[apply]
  whitespace = nowarn

[format]
  pretty = %Cblue%h%Creset %Cgreen[%ad]%Creset (%an) %s

[alias]
  branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
  gr = log --graph --date-order -C -M --pretty=format:\"%Cblue%h%Creset %Cgreen[%ad]%Creset (%an) %Cgreen%d%Creset %s\" --all --date=short
  lol = log -n 10 --graph --pretty=\"%C(yellow)%h %C(reset)| %s | %C(blue)%an %C(reset)| %C(green)%ar\"
  mru = for-each-ref --sort=-committerdate --count=10 refs/heads/ --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) (%(color:green)%(committerdate:relative)%(color:reset))'

[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true

[commit]
  gpgsign = true
  template = ~/.gitmessage
